<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="icon">
        <item name="android:layout_width">@dimen/toolbar_height</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:padding">10dp</item>
    </style>

    <integer name="bottom_height">56</integer>

    <style name="small_btn">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textColor">@color/colorPepe</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@animator/btn_animator</item>
    </style>

    <style name="secondary_small_btn" parent="small_btn">
        <item name="android:background">@drawable/grey_btn_bg</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="toolbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="toolbar_text" parent="toolbar_title">
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>


    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:elevation">4dp</item>
    </style>


    <style name="noAnimTheme" parent="android:Theme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>


</resources>
